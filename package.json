{
  "name": "@diyor28/context",
  "version": "1.0.0",
  "private": false,
  "description": "Context management library for LLM conversations with token budgeting and automatic compaction",
  "keywords": ["llm", "context", "token-budget", "ai", "anthropic", "openai", "gemini"],
  "packageManager": "pnpm@10.19.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/iota-uz/context.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "tiktoken": "^1.0.22",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.38.0",
    "openai": "^4.77.3"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.38.0",
    "@types/node": "^20.17.13",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.0.0",
    "openai": "^4.77.3",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
